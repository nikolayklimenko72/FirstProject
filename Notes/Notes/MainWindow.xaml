<Window x:Class="Notes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel LastChildFill="True">
            
                <ListBox DockPanel.Dock="Top"></ListBox>
                <TextBox DockPanel.Dock="Bottom" Width="300" Height="72" Name="Note"></TextBox>
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal">
                <Button Height="24" Width="59" Click="Button_Click_1">Создать</Button>
                <Button Height="24" Width="59" Margin="10">Удалить</Button>
            </StackPanel>

        </DockPanel>
    </Grid>
</Window>
