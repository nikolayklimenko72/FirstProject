<Window x:Class="Notes.NameNotes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NameNotes" Height="130" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Background="White">
            <Border>
                <TextBlock FontStyle="Normal" FontWeight="Bold" Margin="10,0,0,0">Придумайте название для заметки:</TextBlock>
             </Border>
            <TextBox Margin="13" Name="tbNoteName"></TextBox> 

            <Button Name="btnCreate" Content="Создать" Width="90" Click="btnCreate_Click_1"></Button>
            

        </StackPanel>
       
    </Grid>
</Window>
